    <title>Mon Lecteur Audio Perso</title>
    <style>
        /* --- CSS : Styles et Thèmes --- */
        :root {
            --bg-color: #f0f2f5;
            --text-color: #1c1e21;
            --container-bg: #ffffff;
            --accent-color: #007bff;
            --secondary-bg: #e4e6eb;
        }

        body.dark-theme {
            --bg-color: #18191a;
            --text-color: #e4e6eb;
            --container-bg: #242526;
            --accent-color: #4599ff;
            --secondary-bg: #3a3b3c;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            transition: background-color 0.3s ease;
        }

        .player-container {
            background: var(--container-bg);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
            width: 320px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .controls {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 20px;
        }

        button {
            padding: 12px;
            cursor: pointer;
            border: none;
            border-radius: 10px;
            background: var(--accent-color);
            color: white;
            font-weight: bold;
            transition: opacity 0.2s;
        }

        button:hover {
            opacity: 0.9;
        }

        .volume-control {
            display: flex;
            align-items: center;
            gap: 10px;
            background: var(--secondary-bg);
            padding: 10px;
            border-radius: 10px;
        }

        input[type="range"] {
            flex-grow: 1;
            cursor: pointer;
        }

        #theme-btn {
            background: var(--secondary-bg);
            color: var(--text-color);
            font-size: 0.8rem;
            padding: 5px 10px;
        }
    </style>
</head>
<body class="light-theme">

    <div class="player-container">
        <div class="header">
            <span>Lecteur</span>
            <button id="theme-btn">Mode Sombre</button>
        </div>
        
        <h3 id="track-name">SoundHelix Song 1</h3>
        
        <audio id="audio-player">
            <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
            Votre navigateur ne supporte pas l'élément audio.
        </audio>
        
        <div class="controls">
            <button id="play-pause">Lecture</button>
            
            <div class="volume-control">
                <span>Vol:</span>
                <input type="range" id="volume-slider" min="0" max="1" step="0.05" value="0.5">
            </div>
        </div>
    </div>

    <script>
        // --- JAVASCRIPT : Logique et Persistance ---
        
        const audio = document.getElementById('audio-player');
        const playBtn = document.getElementById('play-pause');
        const volumeSlider = document.getElementById('volume-slider');
        const themeBtn = document.getElementById('theme-btn');
        const body = document.body;

        /**
         * Sauvegarde les préférences dans le LocalStorage
         */
        function saveSettings() {
            const settings = {
                theme: body.classList.contains('dark-theme') ? 'dark' : 'light',
                volume: audio.volume
            };
            localStorage.setItem('playerSettings', JSON.stringify(settings));
        }

        /**
         * Charge les préférences au chargement de la page
         */
        function loadSettings() {
            const saved = localStorage.getItem('playerSettings');
            if (saved) {
                const settings = JSON.parse(saved);
                
                // Appliquer le thème
                if (settings.theme === 'dark') {
                    body.classList.add('dark-theme');
                    themeBtn.textContent = 'Mode Clair';
                }
                
                // Appliquer le volume
                audio.volume = settings.volume;
                volumeSlider.value = settings.volume;
            }
        }

        // Gestion de la lecture
        playBtn.addEventListener('click', () => {
            if (audio.paused) {
                audio.play();
                playBtn.textContent = 'Pause';
            } else {
                audio.pause();
                playBtn.textContent = 'Lecture';
            }
        });

        // Gestion du volume + sauvegarde
        volumeSlider.addEventListener('input', (e) => {
            audio.volume = e.target.value;
            saveSettings();
        });

        // Gestion du thème + sauvegarde
        themeBtn.addEventListener('click', () => {
            body.classList.toggle('dark-theme');
            const isDark = body.classList.contains('dark-theme');
            themeBtn.textContent = isDark ? 'Mode Clair' : 'Mode Sombre';
            saveSettings();
        });

        // Initialisation
        window.addEventListener('DOMContentLoaded', loadSettings);
    </script>
</body>
</html>
